<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.parkh.doing.mapper.AuthKeyMapper">

    <!--  AuthKeyVO : userId / DB tb_authKey USER_ID   -->
    <!--  AuthKeyVO : crateTime / DB tb_authKey : CREATE_TIME   -->
    <resultMap type="xyz.parkh.doing.domain.AuthKeyVo" id="authKeySelectRM">
        <result property="no" column="NO"/>
        <result property="userId" column="USER_ID"/>
        <result property="email" column="EMAIL"/>
        <result property="authKey" column="AUTHKEY"/>
        <result property="crateTime" column="CREATE_TIME"/>
    </resultMap>

    <select id="selectByUserId" resultType="xyz.parkh.doing.domain.AuthKeyVo" resultMap="authKeySelectRM">
        select NO, USER_ID, EMAIL, AUTHKEY, CREATE_TIME
        from tb_authkey
        where USER_ID = #{userId}
        ORDER BY CREATE_TIME DESC
            LIMIT 1;
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="NO" parameterType="xyz.parkh.doing.domain.AuthKeyVo">
        insert into tb_authkey (NO, USER_ID, EMAIL, AUTHKEY, CREATE_TIME)
        values (#{no}, #{userId}, #{email}, #{authKey}, #{crateTime})
    </insert>
</mapper>